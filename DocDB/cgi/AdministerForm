print "<p><hr>\n";

### Journal Administration

%EnableMatrix = ();

$EnableMatrix{journal}{Delete} = 1;

$EnableMatrix{name}{New}       = 1;
$EnableMatrix{pub}{New}        = 1;
$EnableMatrix{abbr}{New}       = 1;
$EnableMatrix{url}{New}        = 1;
$EnableMatrix{acronym}{New}    = 1;

$EnableMatrix{journal}{Modify} = 1;
$EnableMatrix{name}{Modify}    = 1;
$EnableMatrix{pub}{Modify}     = 1;
$EnableMatrix{abbr}{Modify}    = 1;
$EnableMatrix{url}{Modify}     = 1;
$EnableMatrix{acronym}{Modify} = 1;

